<?xml version="1.0" ?>

<robot name="toy_model">
  <material name="red">
    <color rgba="1.0 0.0 0.0 2.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 1.0 2.0"/>
  </material>
  
  <material name="white">
    <color rgba="1.0 1.0 1.0 2.0"/>
  </material>
  
  <material name="black">
    <color rgba="0.0 0.0 0.0 2.0"/>
  </material>

  <link name="link_0">
  	<inertial>
       <mass value="1"/>
       <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 1 0.01"/>
      </geometry>
      <material name="blue"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <link name="link_1">
  	<inertial>
       <mass value="1"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
       <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 0.01 1"/>
      </geometry>
      <material name="red"/>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="joint_1" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="link_0"/>
    <child link="link_1"/>
    <limit effort="10" lower="-1.57" upper="1.57" velocity="1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="link_2">
  	<inertial>
       <mass value="1"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
       <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 0.01 1"/>
      </geometry>
      <material name="red"/>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="joint_2" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 -1"/>
    <parent link="link_1"/>
    <child link="link_2"/>
    <limit effort="10" lower="-1.57" upper="1.57" velocity="1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="link_3">
  	<inertial>
       <mass value="1"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
       <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 0.01 1"/>
      </geometry>
      <material name="red"/>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="joint_3" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 -1"/>
    <parent link="link_2"/>
    <child link="link_3"/>
    <limit effort="10" lower="-1.57" upper="1.57" velocity="1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- FLANGE -->
  <link name="end_eff_link">
    <inertial>
      <origin xyz="0 0 -0" rpy="0 0 0"/>
       <mass value="0"/>
       <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="end_eff_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -1"/>
    <parent link="link_3"/>
    <child link="end_eff_link"/>
  </joint>

</robot>